<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" stylesheets="@style.css"
      fx:controller="com.example.controllers.MainController">
    <Text text="Select COM Port:"/>
    <ComboBox fx:id="comPortDropdown" prefWidth="200"/>
    <HBox spacing="10">
        <Button fx:id="connectButton" text="Connect" onAction="#handleConnect"/>
        <Button fx:id="disconnectButton" text="Disconnect" onAction="#handleDisconnect"/>
    </HBox>
    <HBox spacing="10">
        <Button fx:id="serialNumberBtn" text="GetSerialNumber" onAction="#handleGetScannerSN"/>
    </HBox>
    <HBox spacing="10">
        <Button fx:id="registerCardBtn" text="RegisterCard" onAction="#handleRegisterCard"/>
    </HBox>
</VBox>